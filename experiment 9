#include <stdio.h>
#include <string.h>
#include <ctype.h>

char matrix[5][5];

// Create matrix using fixed key
void createMatrix() {
    char key[] = "ROYALNEWZEALANDNAVY";
    int used[26] = {0};
    int i, k = 0;
    used['J' - 'A'] = 1;

    for(i = 0; key[i] != '\0'; i++) {
        char ch = toupper(key[i]);
        if(!used[ch - 'A']) {
            matrix[k/5][k%5] = ch;
            used[ch - 'A'] = 1;
            k++;
        }
    }

    for(i = 0; i < 26; i++) {
        if(!used[i]) {
            matrix[k/5][k%5] = i + 'A';
            k++;
        }
    }
}

// Find position in matrix
void findPos(char ch, int *r, int *c) {
    if(ch == 'J') ch = 'I';
    for(int i=0;i<5;i++)
        for(int j=0;j<5;j++)
            if(matrix[i][j] == ch) {
                *r=i; *c=j;
            }
}

int main() {
    char cipher[] =
    "KXJEYUREBEZWEHEWRYTUHEYFSKREHEGOYFIWTTTUOLKSYCAJPO"
    "BOTEIZONTXBYBNTGONEYCUZWRGDSONSXBOUYWRHEBAAHYUSEDQ";

    int i,r1,c1,r2,c2;

    createMatrix();

    printf("Decrypted Text:\n");

    for(i=0; cipher[i] != '\0'; i+=2) {
        char a = cipher[i];
        char b = cipher[i+1];

        findPos(a,&r1,&c1);
        findPos(b,&r2,&c2);

        if(r1 == r2) {   // same row
            printf("%c%c",
                   matrix[r1][(c1+4)%5],
                   matrix[r2][(c2+4)%5]);
        }
        else if(c1 == c2) {  // same column
            printf("%c%c",
                   matrix[(r1+4)%5][c1],
                   matrix[(r2+4)%5][c2]);
        }
        else {   // rectangle rule
            printf("%c%c",
                   matrix[r1][c2],
                   matrix[r2][c1]);
        }
    }

    return 0;
}

