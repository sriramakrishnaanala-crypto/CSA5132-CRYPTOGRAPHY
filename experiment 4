#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char text[100], key[100], result[100];
    int i, j = 0;

    printf("Enter plaintext: ");
    fgets(text, sizeof(text), stdin);

    printf("Enter key: ");
    scanf("%s", key);

    int keyLen = strlen(key);

    for(i = 0; text[i] != '\0'; i++) {
        if(isupper(text[i])) {
            result[i] = ((text[i] - 'A' + 
                         toupper(key[j % keyLen]) - 'A') % 26) + 'A';
            j++;
        }
        else if(islower(text[i])) {
            result[i] = ((text[i] - 'a' + 
                         tolower(key[j % keyLen]) - 'a') % 26) + 'a';
            j++;
        }
        else {
            result[i] = text[i];
        }
    }

    result[i] = '\0';

    printf("Encrypted text: %s", result);

    return 0;
}
