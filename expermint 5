#include <stdio.h>
#include <ctype.h>

// Function to find GCD
int gcd(int a, int b) {
    while(b != 0) {
        int t = b;
        b = a % b;
        a = t;
    }
    return a;
}

int main() {
    char text[100];
    int a, b, i;

    printf("Enter plaintext: ");
    scanf("%s", text);

    printf("Enter value of a: ");
    scanf("%d", &a);

    printf("Enter value of b: ");
    scanf("%d", &b);

    if(gcd(a, 26) != 1) {
        printf("Invalid key! 'a' must be coprime with 26.\n");
        return 0;
    }

    printf("Encrypted text: ");

    for(i = 0; text[i] != '\0'; i++) {
        if(isupper(text[i])) {
            int P = text[i] - 'A';
            int C = (a * P + b) % 26;
            printf("%c", C + 'A');
        }
        else if(islower(text[i])) {
            int P = text[i] - 'a';
            int C = (a * P + b) % 26;
            printf("%c", C + 'a');
        }
    }

    return 0;
}
