#include <stdio.h>
#include <ctype.h>

// Function to find GCD
int gcd(int a, int b) {
    while(b != 0) {
        int t = b;
        b = a % b;
        a = t;
    }
    return a;
}

// Find modular inverse
int modInverse(int a) {
    for(int i = 1; i < 26; i++)
        if((a * i) % 26 == 1)
            return i;
    return -1;
}

int main() {

    char text[100];
    int a, b;

    printf("Enter plaintext (UPPERCASE): ");
    scanf("%s", text);

    printf("Enter value of a: ");
    scanf("%d", &a);

    printf("Enter value of b: ");
    scanf("%d", &b);

    if(gcd(a,26) != 1) {
        printf("Invalid key! 'a' must be coprime with 26.\n");
        return 0;
    }

    printf("\nEncrypted Text: ");

    for(int i = 0; text[i] != '\0'; i++) {
        int P = text[i] - 'A';
        int C = (a * P + b) % 26;
        printf("%c", C + 'A');
    }

    // Decryption
    int a_inv = modInverse(a);

    printf("\nDecrypted Text: ");

    for(int i = 0; text[i] != '\0'; i++) {
        int P = text[i] - 'A';
        int C = (a * P + b) % 26;
        int D = (a_inv * (C - b + 26)) % 26;
        printf("%c", D + 'A');
    }

    return 0;
}
